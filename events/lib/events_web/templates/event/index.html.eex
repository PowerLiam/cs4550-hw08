<h1>Listing Events</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Description</th>
      <th>Created by</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for event <- @events do %>
    <tr>
      <td><%= event.name %></td>
      <td><%= event.date %></td>
      <td><%= event.description %></td>
      <td><%= event.user.name %></td>

      <td>
        <span><%= link "Show", to: Routes.event_path(@conn, :show, event) %></span>
        <%= if current_user_id?(@conn, event.user_id) do %>
          <span><%= link "Edit", to: Routes.post_path(@conn, :edit, event) %></span>
        <% end %>
        <span><%= link "Delete", to: Routes.event_path(@conn, :delete, event), method: :delete, data: [confirm: "Are you sure?"] %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<%= if have_current_user?(@conn) do %>
  <span><%= link "New Event", to: Routes.event_path(@conn, :new) %></span>
<% end %>